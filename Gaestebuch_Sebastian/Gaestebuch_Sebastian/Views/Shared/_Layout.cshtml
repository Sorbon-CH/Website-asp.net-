<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@{
    if (Session["userName"] == null)
    {
        ViewBag.name = "";
    }
    else
    {
        ViewBag.name = Session["userName"].ToString();
    }
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <table>
                <tr>@Html.ActionLink("Home ", "Index", "eintraeges")</tr>
                <tr>  |  </tr>
                @if (Session["userID"] == null)
                {
                    <tr>@Html.ActionLink("Login", "login", "admins")</tr>
                }
                else
                {
                    <tr>@Html.ActionLink("Logout", "logout", "admins")</tr>
                }
            </table>
            <p style="color:white">@ViewBag.name</p>
        </div>
    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
