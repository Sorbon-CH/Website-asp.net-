@model IEnumerable<Gaestebuch_Sebastian.Models.Eintraege>


<div style="margin-left: auto; margin-right: auto">

<h2 style="text-align: center">Index</h2>

<p style="text-align: center">
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table" style="max-width: 50%; margin-left: auto; margin-right: auto">

    <tr>
        <th>
            Ersteller
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Besuchsdatum)
        </th>
        <th>
            Details
        </th>
        @{
            if (Session["userID"] != null)
            {
                <th>
                    Autorisiert
                </th>
            }
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
       
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Besuchsdatum)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>

            @if (Session["userID"] != null)
            { 
                <td>
                    @if(item.Autorisiert_ID != null)
                    {
                        <p>Ja</p>
                    }
                    else
                    {
                        <p>Nein</p>
                    }
                </td>
            }
        </tr>
    }

</table>
</div>
